{
  "name": "Musubi (Rust Dev)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "claude --version && cargo --version && python3 --version && uv --version && uv sync",
  "customizations": {
    "vscode": {
      "settings": {
        "lldb.executable": "/usr/bin/lldb",
        "files.watcherExclude": {
          "**/target/**": true
        }
      },
      "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "tamasfe.even-better-toml",
        "serayuzgur.crates",
        "usernamehw.errorlens",
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "remoteUser": "vscode"
}
